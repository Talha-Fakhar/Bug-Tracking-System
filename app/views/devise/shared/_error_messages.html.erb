<% if resource.errors.any? %>
    <div class = "row">
        <div class = "col-md-8 col-md-offset-2">
            <div class = "panel panel-danger">
                <div class = "panel-heading">
                    <div class = "panel-body">
                        <ul>
                            <% resource.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>  
<% end %>