<%= render 'shared/errors', obj: @project %>

<div class="col-md-12">
  <%= form_for(@project, html: { class: "form-horizontal", multipart: true, role: "form" }) do |f| %>
    <div class="form-group mb-4">
      <%= f.label :name, class: 'form-label fw-bold' do %>
          Name <span class="text-danger">*</span>
        <% end %>
      <%= f.text_area :name, class: "form-control", placeholder: "Enter name of project", rows: 2 %>
    </div>
    
    <div class="form-group mb-4">
      <%= f.label :description, class: 'form-label' %>
      <%= f.text_area :description, class: "form-control", placeholder: "Enter project's description", rows: 4 %>
    </div>

    <div class="actions mt-4">
      <%= f.submit class: 'btn btn-primary btn-lg w-100' %>
    </div>
  <% end %>
</div>
