<nav class="navbar navbar-light fixed-top" style="background-color: slategray">
  <a class="navbar-brand" style="color: white; background:none">Bug</a>
</nav>
<table>
  <tr>
    <th>Title</th>
    <th>Status</th>
    <th>Bug Type</th>
    <th>Deadline</th>
    <th>Project</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

<% @bugs.each do |bug| %>
  <tr>
    <td><%= bug.title %></td>
    <td><%= bug.status %></td>
    <td><%= bug.bug_type %></td>
    <td><%= bug.deadline %></td>
    <td><%= bug.project %></td>
    <td><%= link_to 'Show', [bug.project, bug] %></td>
    <td><%= link_to 'Edit', edit_project_bug_path(bug.project, bug) %></td>
    <td><%= link_to 'Destroy', [bug.project, bug], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Bug', new_project_bug_path(params[:project_id]) %>
